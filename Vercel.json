{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/"
      }
    ],
    "cron": [
      {
        "name": "daily-cron-job",
        "schedule": "0 0 * * *",
        "command": "node index.js"
      }
    ]
  }